# ===========================
# Database Configuration
# ===========================
DOCKER_HUB_ORG=hipocap

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_PORT=5433
LMNR_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/postgres

# ===========================
# Shared Secrets
# ===========================
SHARED_SECRET_TOKEN=some_secret
# must be exactly 32 bytes (64 hex characters)
AEAD_SECRET_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
# could be any value
NEXTAUTH_SECRET=0123456789abcdef0123456789abcdef

# ===========================
# RabbitMQ Configuration
# ===========================
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=adminpasswd

# ===========================
# ClickHouse Configuration
# ===========================
CLICKHOUSE_USER=ch_user
CLICKHOUSE_PASSWORD=ch_passwd
CLICKHOUSE_RO_USER=ch_user
CLICKHOUSE_RO_PASSWORD=ch_passwd

# ===========================
# LLM Providers - OpenAI / Groq
# ===========================
OPENAI_API_KEY=<YOUR_GROQ_KEY>
OPENAI_BASE_URL=https://api.groq.com/openai/v1

# ===========================
# LLM Model Names for Usage
# ===========================

# Default model for OpenAI/Groq completions
OPENAI_MODEL=meta-llama/llama-4-maverick-17b-128e-instruct

# Model used for prompt infection/injection analysis
INFECTION_MODEL=openai/gpt-oss-20b

# Model used by the system for primary analysis
ANALYSIS_MODEL=meta-llama/llama-4-maverick-17b-128e-instruct

# Model used for guardrails/prompt safety
GUARD_MODEL=hipocap/Llama-Prompt-Guard-2-22M

# ===========================
# HuggingFace API Tokens
# ===========================
HUGGINGFACE_TOKEN=
HF_TOKEN=

# ===========================
# Hipocap / Project API Keys
# ===========================
# Making it empty will let you create dynamic API keys inside the project frontend.
HIPOCAP_API_KEY=""
GUARD_DEVICE=cpu

# ===========================
# App Port Overrides (Uncomment to use)
# ===========================
# APP_SERVER_HOST_PORT=8000
# APP_SERVER_GRPC_HOST_PORT=8001
# FRONTEND_HOST_PORT=5667
# QUERY_ENGINE_HOST_PORT=8903

# ===========================
# Next.js / OpenAI Chat Names
# ===========================
# Uncomment and set this to enable OpenAI support. Currently used in Next.js
# to generate chat names.
# OPENAI_API_KEY

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=next_secret_abc
BACKEND_URL=http://localhost:8000
BACKEND_RT_URL=http://localhost:8002
NEXT_OTEL_FETCH_DISABLED=1
SHARED_SECRET_TOKEN=some_secret

# these must match what you have in your docker-compose-local-dev.yml for postgres
# postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@{host}:${POSTGRES_PORT}/${POSTGRES_DB}
DATABASE_URL="postgres://postgres:postgres@localhost:5433/postgres"
DATABASE_MAX_CONNECTIONS=10
FORCE_RUN_MIGRATIONS=false

# must be 32 bytes (64 hex characters) long
AEAD_SECRET_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
# replace with FULL if you are testing with a full stack
# ENVIRONMENT=FULL
ENVIRONMENT=LITE
CLICKHOUSE_USER=ch_user
CLICKHOUSE_PASSWORD=ch_passwd
CLICKHOUSE_URL=http://localhost:8123

# for auth
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# for s3
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_TRACE_PAYLOADS_BUCKET=

REDIS_URL=
OPENAI_API_KEY=

QUERY_ENGINE_URL=
QUICKWIT_SEARCH_URL=